{
  "name": "lalcebo/sdk-php-helpers",
  "description": "Provides a collection of PHP helpers functions.",
  "type": "library",
  "keywords": [
    "php",
    "sdk",
    "library",
    "helpers"
  ],
  "homepage": "https://github.com/lalcebo/sdk-php-helpers",
  "license": "MIT",
  "authors": [
    {
      "name": "Jorge P. Hernandez Lalcebo",
      "email": "lalcebo2003@gmail.com",
      "homepage": "https://www.linkedin.com/in/lalcebo"
    }
  ],
  "require": {
    "php": "^7.3|^8.0",
    "ext-ctype": "^7.3",
    "ext-json": "^7.3"
  },
  "require-dev": {
    "php-parallel-lint/php-console-highlighter": "^0.5.0",
    "php-parallel-lint/php-parallel-lint": "^1.2",
    "squizlabs/php_codesniffer": "^3.5",
    "roave/security-advisories": "dev-master",
    "phpunit/phpunit": "^9.4"
  },
  "autoload": {
    "psr-4": {
      "Lalcebo\\Helpers\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Lalcebo\\Helpers\\Tests\\": "tests/"
    }
  },
  "replace": {
    "symfony/polyfill-ctype": "*"
  },
  "minimum-stability": "stable",
  "config": {
    "sort-packages": true
  },
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-master": "0.1-dev"
    }
  },
  "scripts": {
    "lint": "parallel-lint . --exclude vendor",
    "style": "phpcs -p --standard=PSR12 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
    "fix-style": "phpcbf -p --standard=PSR12 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
    "phpunit": "phpunit --coverage-text -colors=always --configuration phpunit.xml",
    "tests": [
      "@lint",
      "@phpunit"
    ]
  }
}
