{
  "name": "lalcebo/sdk-php-helpers",
  "description": "Provides a collection of PHP helpers functions.",
  "type": "library",
  "keywords": [
    "php",
    "sdk",
    "library",
    "helpers"
  ],
  "homepage": "https://github.com/lalcebo/sdk-php-helpers",
  "license": "MIT",
  "authors": [
    {
      "name": "Jorge P. Hernandez Lalcebo",
      "email": "lalcebo2003@gmail.com",
      "homepage": "https://www.linkedin.com/in/lalcebo"
    }
  ],
  "require": {
    "php": "^8.2.0",
    "ext-ctype": "*",
    "ext-json": "*"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "^v3.54.0",
    "laravel/pint": "^1.15",
    "pestphp/pest": "^1.23",
    "phpstan/phpstan": "^1.10",
    "rector/rector": "^1.0",
    "roave/security-advisories": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Lalcebo\\Helpers\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Lalcebo\\Helpers\\Tests\\": "tests/"
    }
  },
  "minimum-stability": "stable",
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true
    }
  },
  "prefer-stable": true,
  "extra": {
    "branch-alias": {
      "dev-master": "1.1-dev"
    }
  },
  "scripts": {
    "refacto": "rector",
    "test:refacto": "rector --dry-run",
    "lint": "pint",
    "test:lint": "pint --test",
    "test:types": "phpstan analyse --ansi",
    "test:unit": "pest --colors=always",
    "test": [
      "@test:refacto",
      "@test:lint",
      "@test:types",
      "@test:unit"
    ]
  }
}
